{
  "name": "heythanks",
  "version": "1.0.0",
  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "apps/*",
    "common/*",
    "infrastructure/*",
    "services/*"
  ],
  "description": "Shopify's node app for CLI tool",
  "scripts": {
    "clean": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf node_modules",
    "serve": "shopify app serve",
    "serve:widget": "npm run dev --workspace @heythanks/widget",
    "serve:admin": "scripts/local/dev -a admin",
    "lint:widget": "npm run lint --workspace @heythanks/widget",
    "build:widget": "npm run build --workspace @heythanks/widget",
    "dev": "cross-env NODE_ENV=development nodemon ./server/index.js --watch ./server/index.js --watch ./public/scripts",
    "lint": "eslint --ext .js ./ --fix",
    "test": "jest",
    "build": "npm run build:widget && NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "cross-env NODE_ENV=production node ./server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localgoods/heythanks.git"
  },
  "author": "localgoods",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/localgoods/heythanks/issues"
  },
  "dependencies": {
    "@apollo/client": "^3.6.0",
    "@babel/core": "7.12.10",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@shopify/app-bridge": "^2.0.22",
    "@shopify/app-bridge-react": "^2.0.26",
    "@shopify/app-bridge-utils": "^2.0.26",
    "@shopify/koa-shopify-auth": "^4.1.2",
    "@shopify/polaris": "^9.2.2",
    "@shopify/polaris-icons": "^4.8.0",
    "@slack/webhook": "^6.1.0",
    "axios": "^0.23.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "extract-css-core": "^3.0.0",
    "graphql": "^16.3.0",
    "install": "^0.13.0",
    "isomorphic-fetch": "^3.0.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-router": "^10.0.0",
    "koa-session": "^6.1.0",
    "next": "^12.1.6",
    "next-env": "^1.1.0",
    "next-images": "^1.8.1",
    "node-fetch": "^2.6.1",
    "normalize-url": "^7.0.3",
    "npm": "^8.17.0",
    "pg": "^8.7.1",
    "puppeteer-core": "^15.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^5.72.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-stage-3": "^7.0.0",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "babel-jest": "26.6.3",
    "babel-register": "^6.26.0",
    "enzyme": "3.11.0",
    "eslint": "^8.14.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^4.3.6",
    "jest": "26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.0",
    "puppeteer": "^15.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint"
    ]
  }
}
